
generator client {
  provider = "prisma-client-js"
  engineType = "binary"
}


datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model Pemeriksaan {
  id_pemeriksaan     Int           @id @default(autoincrement())
  id_perusahaan      Int
  id_petugas         Int
  id_sopir           Int
  tanggal_pemeriksaan String
  jenis_pemeriksaan  String
  penjelasan         String
  keterangan         String
  status             String
  foto               String

  perusahaan         Perusahaan    @relation(fields: [id_perusahaan], references: [id_perusahaan])
  petugas            Petugas       @relation(fields: [id_petugas], references: [id_petugas])
  sopir              Sopir         @relation(fields: [id_sopir], references: [id_sopir])

  kabelListrik       KabelListrik? @relation("PemeriksaanToKabelListrik", fields: [id_kabelListrik], references: [id])
  bateraiAccu        BateraiAccu?  @relation("PemeriksaanToBateraiAccu", fields: [id_bateraiAccu], references: [id])

  id_kabelListrik    Int?
  id_bateraiAccu     Int?
}

model KabelListrik {
  id                Int             @id @default(autoincrement())
  semua_terisolasi  Boolean
  kondisi_konduit   Boolean      // "Baik" atau "Tidak"
  perlindungan_kabel Boolean
  alat_listrik_tambahan Boolean
  pemantik_dilepas  Boolean

  pemeriksaan       Pemeriksaan[]   @relation("PemeriksaanToKabelListrik")
}

model BateraiAccu {
  id             Int       @id @default(autoincrement())
  accuBawahtanki Boolean
  Posisiaccu     Boolean   // "Baik" atau "Tidak"
  accuIsolator   Boolean 
  bukanLogam     Boolean 


  pemeriksaan       Pemeriksaan[]   @relation("PemeriksaanToBateraiAccu")
}

model Perusahaan {
  id_perusahaan   Int           @id @default(autoincrement())
  tanggal_cek_fisik String
  nomor_polisi    String
  nama_perusahaan String
  pemeriksaan     Pemeriksaan[]
}

model Petugas {
  id_petugas   Int           @id @default(autoincrement())
  nomor_petugas String
  nama_petugas String
  pemeriksaan  Pemeriksaan[]

}

model Sopir {
  id_sopir    Int           @id @default(autoincrement())
  nama_sopir  String
  nomer_LO    Int
  pemeriksaan Pemeriksaan[]

}

model User {
  id       Int      @id @default(autoincrement())
  username String   @unique
  password String
  roleId   Int
  role     Role     @relation(fields: [roleId], references: [id])
}

model Role {
  id    Int    @id @default(autoincrement())
  name  String
  users User[]
}
